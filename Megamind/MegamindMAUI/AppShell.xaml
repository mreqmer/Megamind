<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MegamindMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MegamindMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MegamindMAUI">

    <ShellContent
        ContentTemplate="{DataTemplate local:VistaInicio}"
        Route="Inicio" />

    <ShellContent
        ContentTemplate="{DataTemplate local:VistaNuevaSala}"
        Route="NuevaSala" />

    <ShellContent
        ContentTemplate="{DataTemplate local:VistaSalas}"
        Route="Salas" />

    <ShellContent
        ContentTemplate="{DataTemplate local:VistaJuego}"
        Route="Juego" />

    <ShellContent
        ContentTemplate="{DataTemplate local:VistaFinal}"
        Route="Final" />




</Shell>
