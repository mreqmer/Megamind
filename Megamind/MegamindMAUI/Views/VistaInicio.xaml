<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MegamindMAUI.Views.VistaInicio"
             xmlns:vmodel="clr-namespace:MegamindMAUI.VM"
             Background="#7cacdf"
             Padding="20">

    <ContentPage.BindingContext>
        <vmodel:VMInicio/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,Auto,Auto,Auto,*" 
          RowSpacing="15"
          ColumnDefinitions="*"
          VerticalOptions="Center">

        <!-- Logo responsivo -->
        <Image Grid.Row="1"
               Source="megamindinicio.png"
               MaximumHeightRequest="250"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <!-- Contenedor botones principales -->
        <VerticalStackLayout Grid.Row="2" 
                            Spacing="15"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">

            <!-- Bot贸n Unirse -->
            <Button Text="Unirse"
                    Command="{Binding BtnUnirseSalaCommand}"
                    IsVisible="{Binding EsInicioVisible}"
                    Opacity="{Binding OpacidadBtnInicio}"
                    BackgroundColor="#3f4459"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    WidthRequest="200"
                    HeightRequest="50">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="3,3" Radius="5"/>
                </Button.Shadow>
            </Button>

            <!-- Bot贸n Nueva Sala -->
            <Button Text="Nueva Sala"
                    Command="{Binding BtnNuevaSalaCommand}"
                    IsVisible="{Binding EsInicioVisible}"
                    Opacity="{Binding OpacidadBtnInicio}"
                    BackgroundColor="#3f4459"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    WidthRequest="200"
                    HeightRequest="50">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="3,3" Radius="5"/>
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>

        <!-- Campos de entrada y bot贸n Play -->
        <VerticalStackLayout Grid.Row="3" 
                            Spacing="15"
                            IsVisible="{Binding EsPlayVisible}"
                            Opacity="{Binding OpacidadBtnPlay}"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">

            <!-- Nombre de usuario -->
            <Frame BackgroundColor="#D3D3D3"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="True"
                   WidthRequest="200"
                   HeightRequest="50">
                <Entry Placeholder="Nombre: "
                       Text="{Binding Username}"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"/>
            </Frame>

            <!-- Bot贸n Play -->
            <Button Text="Play"
                    Command="{Binding BtnPlayCommand}"
                    BackgroundColor="#3f4459"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    WidthRequest="200"
                    HeightRequest="50">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="3,3" Radius="5"/>
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>
    </Grid>
</ContentPage>